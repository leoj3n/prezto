function loadnode {
  local -aU triggers
  setopt LOCAL_OPTIONS EXTENDED_GLOB
  triggers=(${HOME}/.nvm/versions/node/*/bin/^(which|hs)(-.N:t))
  echo "$triggers[@]"
}
#loadnode

function warpdrive_fpath_blacklist {
  rm -rf "${WARPDRIVE}/fpath"
  mkdir -p "${WARPDRIVE}/fpath"

  cat <<- EOF > "${WARPDRIVE}/fpath/__WARNING__"
    THIS DIRECTORY AUTOMATICALLY GENERATED!
    MANUALLY ADDED ITEMS WILL BE LOST NEXT RUN.
EOF

  setopt LOCAL_OPTIONS EXTENDED_GLOB
  for fp ("$warpdrive_fpaths[@]") cp -n "${fp}/"$~BLACKLIST "${WARPDRIVE}/fpath"
}

